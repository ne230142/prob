<%= form_for(@prob) do |f| %>
  <% if @prob.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prob.errors.count, "error") %> prohibited this prob from being saved:</h2>

      <ul>
      <% @prob.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'TITLE', :class => 'label label-info' %> 問題文を入力してください。<br />
    <%= f.text_area :title , :rows => "3" %>
  </div>
  <div class="field">
    <%= f.label 'STATE', :class => 'label label-info' %> 選択肢を入力してください。<br />
    <%= f.text_area :state ,:rows => "5" %>
  </div>
  <div class="field">
    <%= f.label 'IMAGE_URL', :class => 'label label-info' %> 画像のurlを入力してください(必要ない場合は何も入力しないでください)。<br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label 'AUTHER', :class => 'label label-info' %> この問題の作成者の名前を入力してください。<br />
    <%= f.text_field :auther %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary'%>
  </div>
<% end %>
